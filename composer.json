{
    "name": "fof/auth-gitlab",
    "description": "Allow users to log in with GitLab.",
    "keywords": [
        "flarum"
    ],
    "type": "flarum-extension",
    "license": "MIT",
    "require": {
        "flarum/core": ">=0.1.0-beta.12 <0.1.0-beta.14",
        "omines/oauth2-gitlab": "^3.3.0",
        "fof/extend": ">=0.2.0",
        "fof/components": ">=0.1.1"
    },
    "authors": [
        {
            "name": "Christian Lopez",
            "email": "Christian.L@redevs.org",
            "role": "Developer"
        }
    ],
    "autoload": {
        "psr-4": {
            "FoF\\Auth\\GitLab\\": "src/"
        }
    },
    "extra": {
        "flarum-extension": {
            "title": "FoF GitLab Login",
            "icon": {
                "name": "fab fa-gitlab",
                "backgroundColor": "#e74c3c",
                "color": "#fff"
            }
        },
        "flagrow": {
            "discuss": "https://discuss.flarum.org/d/20371-friendsofflarum-gitlab-login"
        }
    }
}
